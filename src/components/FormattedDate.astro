---
interface Props {
	date: Date | string;
}

const { date } = Astro.props;
const realDate =  (date instanceof Date) ? date : new Date(date)
---

<time datetime={realDate.toISOString()}>
    {
       realDate.toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
       })
    }
</time>
